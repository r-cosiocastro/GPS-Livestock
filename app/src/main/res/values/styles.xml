<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ExpressiveShape.Small" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ExpressiveShape.Medium" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ExpressiveShape.Large" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSize">32dp</item>
    </style>

    <style name="ExpressiveWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
        <item name="android:windowAnimationStyle">@style/ExpressiveWindowAnimation</item>
    </style>
</resources>